<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".organization.OrgAddFacility">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/editTextFacilityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Facility Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextFacilityAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Facility Address"
            android:inputType="textPostalAddress" />

        <EditText
            android:id="@+id/editTextFacilityEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Facility Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextFacilityPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Facility Phone Number"
            android:inputType="phone" />

        <Button
            android:id="@+id/buttonCreateFacility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Facility"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>
        <Button
            android:id="@+id/button_go_to_facility_list_from_add_facility"
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</FrameLayout>
