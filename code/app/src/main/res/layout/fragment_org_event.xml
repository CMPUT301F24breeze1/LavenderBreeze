<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/button_go_to_qrcode_from_org_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View QR Code" />

    <Button
        android:id="@+id/button_go_to_edit_event_from_org_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Event" />

    <Button
        android:id="@+id/button_go_to_waiting_list_from_org_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Waiting List" />

    <Button
        android:id="@+id/button_go_to_selected_list_from_org_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Selected List" />
</LinearLayout>
