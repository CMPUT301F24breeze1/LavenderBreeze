<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eventList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#382E2E">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:text="Events"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/button_show_accepted"
            android:background="@drawable/buttonborder"
            android:text="Accept" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/button_show_waitlist"
            android:background="@drawable/buttonborder"
            android:text="Request" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/button_show_selected"
            android:background="@drawable/buttonborder"
            android:text="Select" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/button_show_cancelled"
            android:background="@drawable/buttonborder"
            android:text="Decline" />
    </LinearLayout>

    <ListView
        android:id="@+id/eventListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addEventButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_input_add" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_go_to_entrant_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EtPrf" />
        <Button
            android:id="@+id/button_go_to_entrant_event_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evt" />

        <Button
            android:id="@+id/button_go_to_Leave_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leav" />

        <Button
            android:id="@+id/button_go_to_qr_scanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EQR" />
        <Button
            android:id="@+id/button_go_to_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="He" />

    </LinearLayout>

</LinearLayout>