<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#303030">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Button to go back to event -->

            <Button
                android:id="@+id/admin_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:drawableLeft="@drawable/left_arrow"
                android:backgroundTint="#303030"
                android:textSize="18sp"
                android:drawableTint="@color/white"
                />

            <!-- Spacer -->

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/admin_event_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/select_entrants"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:maxHeight="225dp"/>

        <TextView
            android:id="@+id/admin_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textColor="#ffffff"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/admin_event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Information"
            android:textSize="15sp"
            android:textColor="#ffffff"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule: "
            android:textColor="#ffffff"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/admin_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" to "
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/admin_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End date"
                android:textColor="#ffffff"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity: "
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/admin_event_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="capacity"
                android:textColor="#ffffff"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: "
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/admin_event_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="#ffffff"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration Period: "
            android:textColor="#ffffff"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/admin_registration_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" to "
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/admin_registration_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End date"
                android:textColor="#ffffff"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"/>

        <Button
            android:id="@+id/delete_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete entire event" />

        <Button
            android:id="@+id/delete_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete poster" />

        <Button
            android:id="@+id/delete_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete QR code" />
    </LinearLayout>
</ScrollView>